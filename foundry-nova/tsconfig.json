{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": [ "dom", "es5", "scripthost", "es2015.collection" ],
    "types": ["@league-of-foundry-developers/foundry-vtt-types"],
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ],
}